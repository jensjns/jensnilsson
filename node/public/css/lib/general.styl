@require 'settings'

html
    font-size 16px
    background no-repeat center center fixed
    -webkit-background-size cover
    -moz-background-size cover
    -o-background-size cover
    background-size cover

body
    .site
        width 1080px
        max-width 90%
        display block
pre
code
    font-family Monaco, Consolas, "Liberation Mono", Menlo, Courier, monospace
    font-size 14px

h1
    padding-bottom .3em
    font-size 2em
    line-height 1.2
    a
        text-decoration none

.content-width
    width 100%
    max-width 860px

.no-dec
    text-decoration none

a
    color #01b2f1

.stacked-octicons
    .octicon
        width 16px
        text-align center